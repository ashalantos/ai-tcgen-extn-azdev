{
  "name": "AI Test Case Generator",
  "description": "AI-powered test case generator for Azure DevOps using OpenAI",
  "keywords": ["azure-devops", "openai", "test-automation", "ai"],
  "env": {
    "AZURE_DEVOPS_ORGANIZATION": {
      "description": "Azure DevOps organization name",
      "value": "your-organization"
    },
    "AZURE_DEVOPS_PROJECT": {
      "description": "Azure DevOps project name", 
      "value": "Your Project Name"
    },
    "AZURE_DEVOPS_PAT": {
      "description": "Azure DevOps Personal Access Token with Work Items (Read & Write) permissions"
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key starting with sk-"
    },
    "OPENAI_MODEL": {
      "description": "OpenAI model to use",
      "value": "gpt-3.5-turbo"
    },
    "DEBUG": {
      "description": "Enable debug mode",
      "value": "false"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
